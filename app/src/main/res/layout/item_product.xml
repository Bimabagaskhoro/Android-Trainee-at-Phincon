<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:background="@color/background_pink"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_tittle_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="80dp"
                android:ellipsize="end"
                android:fontFamily="@font/poppinsbold"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_product"
                app:layout_constraintTop_toBottomOf="@+id/tv_date_product"
                tools:text="Jam Tangan" />

            <TextView
                android:id="@+id/tv_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/img_product"
                app:layout_constraintTop_toBottomOf="@+id/tv_tittle_product"
                tools:text="Rp. 10.000" />

            <ImageView
                android:id="@+id/img_item_star_1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/tv_price_product"
                app:layout_constraintTop_toBottomOf="@+id/tv_price_product"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_item_star_2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_item_star_1"
                app:layout_constraintStart_toEndOf="@+id/img_item_star_1"
                app:layout_constraintTop_toTopOf="@+id/img_item_star_1"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_item_star_3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_item_star_2"
                app:layout_constraintStart_toEndOf="@+id/img_item_star_2"
                app:layout_constraintTop_toTopOf="@+id/img_item_star_2"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_item_star_4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_item_star_3"
                app:layout_constraintStart_toEndOf="@+id/img_item_star_3"
                app:layout_constraintTop_toTopOf="@+id/img_item_star_3"
                app:srcCompat="@drawable/ic_star" />

            <ImageView
                android:id="@+id/img_item_star_5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_item_star_4"
                app:layout_constraintStart_toEndOf="@+id/img_item_star_4"
                app:layout_constraintTop_toTopOf="@+id/img_item_star_4"
                app:srcCompat="@drawable/ic_star" />

            <TextView
                android:id="@+id/tv_date_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/poppinsbold"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp"
                tools:text="03 Agustus 2022" />

            <ImageView
                android:id="@+id/img_btn_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:visibility="invisible"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_favorite" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>